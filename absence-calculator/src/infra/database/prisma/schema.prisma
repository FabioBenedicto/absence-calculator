generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    Int       @id @default(autoincrement())
  email                 String    @unique
  password              String
  change_password_token String?    @db.VarChar(64)
  classes               Class[]
  absences              Absence[]

  @@map("users")
}

model Class {
  id             Int    @id @default(autoincrement())
  name           String
  class_workload Int
  absence_limit  Int

  user_id Int
  user    User @relation(fields: [user_id], references: [id])

  absences  Absence[]
  week_days WeekDay[]

  @@map("classes")
}

model WeekDay {
  id       Int         @id @default(autoincrement())
  week_day WeekDayEnum

  classes  Class[]
  holidays Holiday[]

  @@map("week_days")
}

model Holiday {
  id          Int      @id @default(autoincrement())
  description String
  date        DateTime
  week_day_id Int

  week_day WeekDay @relation(fields: [week_day_id], references: [id])

  @@map("holydays")
}

model Absence {
  id       Int      @id @default(autoincrement())
  date     DateTime
  user_id  Int
  class_id Int

  user  User  @relation(fields: [user_id], references: [id])
  class Class @relation(fields: [class_id], references: [id])

  @@map("absences")
}

enum WeekDayEnum {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}
